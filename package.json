{
  "private": true,
  "name": "pragmatics",
  "version": "0.1.0",
  "description": "Pragmatics monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pvds/pragmatics.git"
  },
  "author": "pvds <pvdsteen@gmail.com>",
  "license": "ISC",
  "homepage": "https://github.com/pvds/pragmatics",
  "bugs": "https://github.com/pvds/pragmatics/issues",
  "keywords": [
    "pragmatics"
  ],
  "scripts": {
    "postinstall": "manypkg check",
    "start": "lerna run start",
    "build": "lerna run build",
    "test": "jest",
    "test:changed": "yarn test -o",
    "lint": "run-p lint:*",
    "lint:js": "eslint . --cache --fix",
    "lint:css": "stylelint **/*.scss --cache --fix --allow-empty-input",
    "lint:prettier": "prettier . --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": "stylelint --fix --allow-empty-input",
    "*.js": "eslint --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/*.(spec|test).[tj]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "dist"
    ],
    "modulePathIgnorePatterns": [
      "dist"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@changesets/cli": "^2.10.3",
    "@manypkg/cli": "^0.16.1",
    "@types/jest": "^26.0.14",
    "copyfiles": "^2.3.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.8.1",
    "eslint-plugin-jest": "^24.0.2",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "stylelint": "^13.7.0"
  }
}
